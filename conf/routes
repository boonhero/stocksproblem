# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                     controllers.Application.index
GET         /box                  controllers.Application.createBox

GET         /messages             controllers.Application.messageList
POST        /messages             controllers.Application.saveMessage

GET         /stock                controllers.StockController.index
POST        /stock/buy            controllers.StockController.buyTransaction

GET        /stock/user/:userId    controllers.StockController.showStocksFrom(userId: String)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file         controllers.Assets.versioned(path="/public", file: Asset)

GET         /webjars/*file        controllers.WebJarAssets.at(file)
